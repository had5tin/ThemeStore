<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
<head>
    <title>@ViewBag.Title</title>
    @SetMeta(new Falcon.UI.Resources.MetaEntry { HttpEquiv = "Content-Type", Content = "text/html; charset=utf-8" })
    @SetMeta("description", ViewBag.MetaDescription)
    @SetMeta("keyword", ViewBag.MetaKeyword)
    @*@Css("reset.css?v=1.0", new { media = "all" })
    @Css("boxes.css?v=1.0", new { media = "all" })
    @Css("custom.css?v=1.0", new { media = "all" })
    @Css("print.css?v=1.0", new { media = "print" })
    @Css("menu.css?v=1.0", new { media = "screen, projection" })*@
    <link href="/Content/colorbox.css?v=1.3" media="all" rel="stylesheet" type="text/css" />
    <link href="/Content/jquery.jqzoom.css?v=1.3" media="all" rel="stylesheet" type="text/css" />
    <!--[if lt IE 8]>
    @Css("iestyles.css?v=1.0", new { media = "all" })
    <![endif]-->
    <!--[if lt IE 7]>
    @Css("below_ie7.css?v=1.0", new { media = "all" })
    <![endif]-->
    <!--[if IE 7]>
    @Css("ie7.css?v=1.0", new { media = "all" })
    <![endif]-->
    <link href="/Content/themes/ui-lightness/jquery-ui-1.10.2.custom.css?v=1.0"
        media="all" rel="stylesheet" type="text/css" />
    @(Html.Telerik().StyleSheetRegistrar()
                    .DefaultGroup(group => group
                                            .DefaultPath("~/Content/telerik/")
                                            .Add("telerik.common.css")
                                            .Add("telerik.vista.min.css")
                                            .Combined(true)
                                            .Compress(true)
                    ))
    <link href="/Themes/Portal/Default2/Styles/iframe.css" rel="Stylesheet" type="text/css" />
    @Js("jquery-1.7.1.min.js?v=1.0")
    @Js("jquery.validate.min.js?v=1.0")
    @Js("jquery.validate.unobtrusive.min.js?v=1.0")
    @Js("jquery-ui-1.10.2.min.js?v=1.0")
    @Js("admin/admin.js?v=1.0")
    @Js("admin/falcon.tabs.js?v=1.0")
    @Js("tiny_mce/jquery.tinymce.js?v=1.0")
    @Js("jstree/jquery.jstree.js?v=1.0")
    @Js("swfobject.js?v=1.0")
    @Js("jquery.uploadify.js?v=1.0")
    @Js("jquery.colorbox.min.js?v=1.3")
    @Js("jquery.jqzoom-core.js?v=1.0")
    @Js("jcarousellite_1.0.1.min.js?v=1.0")
    @*@(Html.Telerik().ScriptRegistrar()
                    .DefaultGroup(group => group.DefaultPath("~/Scripts/telerik"))
                    .jQuery(false)
                    .jQueryValidation(false))*@
    @StackExchange.Profiling.MiniProfiler.RenderIncludes()
    <script type="text/javascript">
        var BASE_URL = "@Falcon.Infrastructure.EngineContext.Current.FalconConfig.DomainName";
        var MEDIA_URL = "@Falcon.Infrastructure.EngineContext.Current.FalconConfig.MediaDomainName";
        var THEME_PATH = "@AbsoluteThemePath";
    </script>
</head>
<body id="html-body">
    <div class="content-header" style="padding-left: 5px; padding-top: 5px">
        <table cellspacing="0">
            <tbody>
                <tr>
                    <td style="width: 100%;">
                        <h3 class="icon-head head-cms-page">
                            @ViewData["ToolbarTitle"]</h3>
                    </td>
                    <td class="form-buttons"></td>
                </tr>
            </tbody>
        </table>
    </div>
    <div id="messages" style="display: block">@Html.DisplayNotifications(TempData)</div>
    <div>
        @RenderBody()
    </div>
</body>
@if (WorkContext.CurrentAccountId < 0)
{ 
    @Html.Partial("/Themes/Portal/Shared/Views/Include/PopupLogin.cshtml")
}
</html>
