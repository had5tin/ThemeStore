@model ThemeCollectionModel
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Sửa thông tin tài khoản</h4>
</div>
@using (Html.BeginForm())
{
    <div class="modal-body">

        @*@Html.AntiForgeryToken()*@

        <div class="form-horizontal">

            @Html.HiddenFor(mode => Model.Id)

            @Html.ValidationSummary(true, "")
            <div class="form-group">
                <label for="Name" class="control-label col-md-4">Ngành nghề</label>
                <div class="col-md-8">
                    @Html.DropDownListFor(m => m.CollectionSelect, new MultiSelectList(Model.CollectionList, "Value", "Text", Model.CollectionSelect), new { @class = "form-control selectpicker hidden", multiple = "" })
                    @Html.DropDownList("CollectionSelect1", new MultiSelectList(Model.CollectionList, "Value", "Text", Model.CollectionSelect), new { @class = "form-control selectpicker", multiple = "", title = "Chọn ngành nghề"})
                    
                    @*<select class="selectpicker" multiple title='Choose one of the following...'>
                        <option>Mustard</option>
                        <option>Ketchup</option>
                        <option>Relish</option>
                    </select>*@

                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn" type="button" data-dismiss="modal">Cancel</button>
        <input class="btn btn-primary" type="submit" value="Save" />
    </div>
}

<script src="~/Scripts/loadBootstrapSelect.js"></script>